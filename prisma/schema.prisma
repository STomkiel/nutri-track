generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DishType {
  name_id     String @id
  img_src     String
  dish        Dish[]
}

model Dish {
  name_id     String     @id
  type_id     String    @default("Unknown")
  type        DishType  @relation(fields: [type_id], references: [name_id])
  description String
  img_src     String
  ingredients String[]
  fat         Decimal
  protein     Decimal
  carbs       Decimal
  instruction String[]
}
